obj Orologio(ore: Int, minuti: Int, secondi: Int, data: Str) {
	fnc impostaOrario(ore_: Int, minuti_: Int, secondi_: Int): Empty {
		ore := ore_
		minuti := minuti_
		secondi := secondi_
	}

	fnc visualizzaOrario(): Str {
		| "Sono le " + ore + ":" + minuti + ":" + secondi
	}

	fnc incrementaOrario(): Empty {
		secondi := secondi + 1
	}

	fnc visualizzaData(): Str {
		| "Oggi e' il: " + data
	}
}
